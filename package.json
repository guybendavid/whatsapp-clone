{
  "name": "whatsapp-clone",
  "version": "1.0.0",
  "author": "Guy Ben David",
  "license": "BSD-3-Clause",
  "private": true,
  "type": "module",
  "workspaces": [
    "client",
    "server"
  ],
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "start": "vite preview --config client/vite.config.ts",
    "dev": "vite --config client/vite.config.ts",
    "format": "prettier --write .",
    "lint": "eslint . && npx strictify unimported-exports && knip --no-exit-code",
    "lint:eslint-fix": "eslint . --fix",
    "test": "node --test --import tsx tests/**/*.test.*",
    "build-client": "tsc -b client/tsconfig.json && vite build --config client/vite.config.ts",
    "clean": "node -e \"require('fs').rmSync('dist', { recursive: true, force: true })\"",
    "create-dist-folder": "node -e \"require('fs').mkdirSync('dist', { recursive: true })\"",
    "build-server": "cd server && npm i && npm run build && cd .. && npx -y cpy-cli server/package.json server/package-lock.json dist --flat && (cd dist && npm i --no-audit --no-fund)",
    "build": "npm run clean && npm run create-dist-folder && npm run build-client && npx -y cpy-cli \"client/build/**\" dist/client --cwd=. --parents && node -e \"require('fs').rmSync('client/build', { recursive: true, force: true })\" && npm run build-server",
    "prepare": "husky",
    "validate": "npm run lint && npm run test && npx prettier --check ."
  },
  "devDependencies": {
    "@types/eslint-plugin-jsx-a11y": "^6.10.1",
    "eslint": "^9.17.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "husky": "^9.1.7",
    "knip": "^5.61.3",
    "prettier": "^3.6.2",
    "pretty-quick": "^4.0.0",
    "strictify": "file:../strictify",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.19.1"
  }
}
